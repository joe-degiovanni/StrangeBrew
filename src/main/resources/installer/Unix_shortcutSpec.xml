<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="StrangeBrew" location="applications"/>
    <shortcut
      name="StrangeBrew"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="no"
      startup="no"
      target="java"
      commandLine="-jar &quot;$INSTALL_PATH/StrangeBrew.jar&quot;"
      workingDirectory="$INSTALL_PATH"
      description="StrangeBrew Brewing Software"
      iconFile="$INSTALL_PATH/src/ca/strangebrew/icons/sb2.gif"
      iconIndex="0"
      type="Application"
      encoding="UTF-8"
      terminal="false"
      KdeSubstUID="false"
      createForAll="yes"
      Categories="Application;Other;"
      TryExec="java -jar &quot;$INSTALL_PATH/StrangeBrew.jar&quot;"
      initialState="normal">   
      <createForPack name="StrangeBrew"/>     
    </shortcut>

    <shortcut
      name="StrangeBrew Help"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="no"
      startup="no"
      target="firefox"
      workingDirectory=""
      commandLine="$INSTALL_PATH/help/index.html"
      initialState="noShow"
      iconFile="help"
      iconIndex="0"
      url="$INSTALL_PATH/help/index.html"
      type="Application"
      encoding="UTF-8"
      createForAll="yes"
      Categories="Application;Other;"
      description="Opens a WebBrowser to view the StrangeBrew documentation">
      <createForPack name="Help"/>
    </shortcut>

    <shortcut
      name="StrangeBrew Uninstaller"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="no"
      startup="no"
      target="java"
      commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
      initialState="noShow"
      iconFile="trashcan_full"
      iconIndex="0"
      workingDirectory=""
      type="Application"
      encoding="UTF-8"
      KdeSubstUID="true"
      KdeUsername="root"
      createForAll="yes"
      Categories="Application;Other;"
      TryExec="java -jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
      description="StrangeBrew uninstaller">
      <createForPack name="StrangeBrew"/>
    </shortcut>

</shortcuts>
