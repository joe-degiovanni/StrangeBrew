<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="StrangeBrew" location="applications"/>
      <shortcut
         name="StrangeBrew"
         programGroup="yes"
         desktop="yes"
         applications="no"
         startMenu="no"
         startup="no"
         target="$INSTALL_PATH\StrangeBrew.jar"
         workingDirectory="$INSTALL_PATH"
         commandLine=""
         description="StrangeBrew Brewing Software"
         iconFile="$INSTALL_PATH\src\ca\strangebrew\icons\brew.ico"
         iconIndex="0"
         initialState="noShow">
         <createForPack name="StrangeBrew"/>
       </shortcut>
    <shortcut
            name="StrangeBrew Documentation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\help\index.html"
            commandLine=""
            description="StrangeBrew documentation">
        <createForPack name="Help"/>
    </shortcut>
    <shortcut
            name="Uninstall StrangeBrew"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\uninstaller\uninstaller.jar"
            iconFile="%SystemRoot%\system32\SHELL32.dll"
            iconIndex="31"
            commandLine=""
            description="Uninstall StrangeBrew">
        <createForPack name="StrangeBrew"/>
    </shortcut>
</shortcuts>
